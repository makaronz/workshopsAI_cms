# Test Environment Configuration
NODE_ENV=test

# Database Configuration for Testing
DB_HOST=localhost
DB_PORT=5432
DB_USER=test_user
DB_PASSWORD=test_password
DB_NAME=workshopsai_cms_test

# Redis Configuration for Testing
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration for Testing
JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=test-refresh-secret-key-for-testing-purposes-only
REFRESH_TOKEN_EXPIRES_IN=7d

# Server Configuration for Testing
PORT=3001
CORS_ORIGIN=http://localhost:3001

# External Service Mocks
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=test-bucket

GOOGLE_CLOUD_PROJECT_ID=test-project
GOOGLE_CLOUD_KEYFILE=test-keyfile.json

SENDGRID_API_KEY=test-sendgrid-key
MAILGUN_API_KEY=test-mailgun-key

# Email Configuration (Mock)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=test-session-secret
CORS_ORIGIN=http://localhost:3001

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/test.log

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOAD=true
ENABLE_WEBSOCKETS=true
ENABLE_CACHING=true

# Testing Configuration
TEST_MODE=true
MOCK_EXTERNAL_APIS=true
DISABLE_RATE_LIMITING=true
DISABLE_AUTHENTICATION=false

# Performance Testing
LOAD_TEST_DURATION=30s
LOAD_TEST_USERS=100
STRESS_TEST_THRESHOLD=1000

# Playwright Configuration
TEST_BASE_URL=http://localhost:3001
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=AdminPassword123!

# Lighthouse Configuration
LHCI_TOKEN=
LHCI_SERVER_URL=
LHCI_BUILD_CONTEXT__CURRENT_HASH=
LHCI_BUILD_CONTEXT__CURRENT_BRANCH=main

# Monitoring and Analytics
ENABLE_PROMETHEUS=false
ENABLE_NEW_RELIC=false
ENABLE_SENTRY=false

# Test Database Cleanup
CLEANUP_AFTER_TESTS=true
PRESERVE_TEST_DATA=false