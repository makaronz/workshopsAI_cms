# Test Environment Configuration
# Copy this file to .env.test for running tests

# Environment
NODE_ENV=test
TEST_MODE=true

# Database Configuration (Test Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=workshopsai_cms_test
DB_USER=testuser
DB_PASSWORD=testpass
DATABASE_URL=postgresql://testuser:testpass@localhost:5432/workshopsai_cms_test

# Redis Configuration (Test Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT Configuration (Test Keys)
JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only-never-use-in-production
REFRESH_TOKEN_SECRET=test-refresh-secret-key-for-testing-purposes-only-never-use-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Application Configuration
PORT=3001
BASE_URL=http://localhost:3001

# Email Configuration (Test)
EMAIL_SERVICE=mock
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=test@example.com

# Cloud Storage Configuration (Test)
STORAGE_SERVICE=mock
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=
GCS_BUCKET=

# File Upload Configuration (Test)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting (Test - More permissive for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration (Test)
LOG_LEVEL=error
LOG_FILE=logs/test.log

# WebSocket Configuration (Test)
WS_PORT=3002

# External API Configuration (Test)
API_BASE_URL=http://localhost:3001/api

# Analytics and Monitoring (Test)
ENABLE_METRICS=false
ENABLE_PROFILING=false

# Feature Flags (Test)
ENABLE_CACHING=false
ENABLE_WEBSOCKETS=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Test-specific Settings
SKIP_AUTH=true
MOCK_EXTERNAL_SERVICES=true
CLEANUP_TEST_DATA=true
SEED_TEST_DATA=true

# Security Configuration (Test - Relaxed for testing)
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
ENABLE_CSP=false
ENABLE_HSTS=false

# Development Tools
ENABLE_DEBUG_LOGGING=true
ENABLE_TEST_ROUTES=true

# Memory and Performance (Test)
MAX_MEMORY_USAGE=512mb
ENABLE_MEMORY_LEAK_DETECTION=true