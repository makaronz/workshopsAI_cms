# workshopsAI CMS Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=workshopsai_cms

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-secret-key-change-in-production-min-32-chars
REFRESH_TOKEN_EXPIRES_IN=30d

# Password Configuration
SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Email Service Configuration
EMAIL_PROVIDER=sendgrid
# Options: sendgrid, mailgun, nodemailer

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@workshopsai.com
SENDGRID_FROM_NAME=WorkshopsAI
SENDGRID_REPLY_TO=support@workshopsai.com
SENDGRID_WEBHOOK_SECRET=your_webhook_secret_here

# Mailgun Configuration
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@mg.yourdomain.com
MAILGUN_FROM_NAME=WorkshopsAI
MAILGUN_REPLY_TO=support@workshopsai.com
MAILGUN_WEBHOOK_SECRET=your_webhook_secret_here

# SMTP Configuration (for Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@workshopsai.com
SMTP_FROM_NAME=WorkshopsAI
SMTP_REPLY_TO=support@workshopsai.com

# Email Settings
EMAIL_BASE_URL=https://workshopsai.com
EMAIL_LOGO_URL=https://workshopsai.com/logo.png
EMAIL_PRIMARY_COLOR=#4F46E5
EMAIL_SECONDARY_COLOR=#6B7280
EMAIL_FACEBOOK_URL=https://facebook.com/workshopsai
EMAIL_TWITTER_URL=https://twitter.com/workshopsai
EMAIL_LINKEDIN_URL=https://linkedin.com/company/workshopsai
EMAIL_INSTAGRAM_URL=https://instagram.com/workshopsai

# Email Tracking
EMAIL_TRACKING_ENABLED=true
EMAIL_OPEN_TRACKING=true
EMAIL_CLICK_TRACKING=true
EMAIL_UNSUBSCRIBE_TRACKING=true

# Email Rate Limiting
EMAIL_RATE_LIMIT_MAX=100
EMAIL_RATE_LIMIT_WINDOW=900000

# Email Queue Settings
EMAIL_QUEUE_CONCURRENCY=10
EMAIL_QUEUE_MAX_RETRIES=3
EMAIL_QUEUE_RETRY_DELAY=5000
EMAIL_QUEUE_BACKOFF_MULTIPLIER=2

# GDPR Compliance
EMAIL_GDPR_COMPLIANT=true
EMAIL_CONSENT_REQUIRED=true
EMAIL_UNSUBSCRIBE_REQUIRED=true
EMAIL_RETENTION_DAYS=365

# Redis Configuration (for sessions and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# External Services
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Cloud Storage Configuration
# Default provider (aws-s3, google-cloud, azure-blob, local)
STORAGE_DEFAULT_PROVIDER=aws-s3

# AWS S3 Configuration
AWS_S3_ENABLED=true
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=workshopsai-uploads
AWS_S3_ENDPOINT= # Optional for custom S3-compatible endpoints
AWS_S3_FORCE_PATH_STYLE=false
AWS_S3_SIGNATURE_VERSION=v4

# Google Cloud Storage Configuration
GCS_ENABLED=false
GCS_PROJECT_ID=your-gcp-project-id
GCS_KEY_FILENAME=./path/to/service-account-key.json
GCS_BUCKET_NAME=your-gcs-bucket

# Azure Blob Storage Configuration
AZURE_BLOB_ENABLED=false
AZURE_ACCOUNT_NAME=your_storage_account
AZURE_ACCOUNT_KEY=your_azure_storage_key
AZURE_CONTAINER_NAME=your-container

# Local Storage Configuration
STORAGE_LOCAL_ENABLED=true
STORAGE_LOCAL_UPLOAD_DIR=./uploads
STORAGE_LOCAL_PUBLIC_URL=http://localhost:3001/uploads

# Storage Security Configuration
STORAGE_MAX_FILE_SIZE=524288000  # 500MB in bytes
STORAGE_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain
STORAGE_ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp,.pdf,.doc,.docx,.txt
STORAGE_VIRUS_SCAN=true
STORAGE_GENERATE_PREVIEWS=true

# Storage Performance Configuration
STORAGE_MULTIPART_THRESHOLD=104857600  # 100MB
STORAGE_MAX_CONCURRENT_UPLOADS=3
STORAGE_COMPRESSION_ENABLED=true
STORAGE_CDN_ENABLED=false

# Storage Retention Configuration
STORAGE_AUTO_CLEANUP=true
STORAGE_RETENTION_DAYS=365
STORAGE_ARCHIVE_AFTER_DAYS=90

# Storage Monitoring Configuration
STORAGE_ENABLE_METRICS=true
STORAGE_ENABLE_AUDIT_LOG=true
STORAGE_ERROR_WEBHOOK=

# Analytics and Monitoring
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_PORT=9090

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
CSP_NONCE=dynamic

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WAITING_LIST=true
ENABLE_AUTO_CONFIRMATION=false
ENABLE_COURSE_COMPLETION_CERTIFICATES=false

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Development Only
SKIP_AUTH=false
ENABLE_SWAGGER_DOCS=true
ENABLE_GRAPHQL_PLAYGROUND=false